<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_goneMarginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shoppingListDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkItem"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scaleX="2"
            android:scaleY="2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:autoSizeTextType="uniform"
        >

        <TextView
            android:id="@+id/shoptextAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:maxLines="1"
            android:text="Amount:"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/shoppingListAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="15dp"
            android:text="None"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/shoptextUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Unit:"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/shoppingListUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="15dp"
            android:text="None"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/shoptextCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Category:"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/shoppingListIngredientCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:maxLines="1"
            android:text="None"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>