<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_background"
    android:paddingTop="10dp" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/satoshi_bold"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/title_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/satoshi_medium"
            android:textColor="@color/black"
            android:textSize="18sp"  />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="70dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/PreparationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation\nTime (mins)"
            android:layout_weight="2"
            android:textAlignment="center"
            android:fontFamily="@font/satoshi_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/PreparationTime_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:inputType="number"
            android:fontFamily="@font/satoshi_medium"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving"
            android:layout_weight="2"
            android:textAlignment="center"
            android:fontFamily="@font/satoshi_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/servings_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:inputType="number"
            android:fontFamily="@font/satoshi_medium"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_weight="2"
            android:textAlignment="center"
            android:fontFamily="@font/satoshi_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Category_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/satoshi_medium"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:layout_weight="2"
            android:textAlignment="center"
            android:fontFamily="@font/satoshi_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Comments_editText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/satoshi_medium"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture"
            android:layout_weight="2"
            android:textAlignment="center"
            android:fontFamily="@font/satoshi_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/recImage"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginRight="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop= "30dp"
        android:gravity="center">

        <Button
            android:id="@+id/ingredients_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Ingredients"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin= "30dp"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/delete_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="Delete"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/update_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:text="Update"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="20sp" />
    </TableRow>

</TableLayout>