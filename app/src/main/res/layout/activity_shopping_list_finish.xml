<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/shoppingFinishText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Select Ingredient to Add to Storage"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shoppingFinishListView"
        android:layout_width="409dp"
        android:layout_height="489dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/finishShopping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingFinishText">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/finishShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#10f7f7f7"
        android:gravity="center"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="607dp"
        app:layout_constraintTop_toBottomOf="@id/shoppingFinishListView">

        <Button
            android:id="@+id/shopFinishShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Shopping">

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>