<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_recipies">

    <Button
        android:id="@+id/switchToIngredientStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/grocery"
        android:foregroundGravity="fill"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Ingredients"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/switchToShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"

        android:drawableTop="@drawable/shoppinglist"
        android:foregroundGravity="fill"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Shop List"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switchToIngredientStorage" />

    <Button
        android:id="@+id/switchToMealPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"

        android:drawableTop="@drawable/mealplan"
        android:foregroundGravity="fill"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Meal Plan"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switchToShoppingList" />

    <Button
        android:id="@+id/switchToRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"

        android:drawableTop="@drawable/recipe_book"
        android:foregroundGravity="fill"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Recipes"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switchToMealPlan" />


</androidx.constraintlayout.widget.ConstraintLayout>